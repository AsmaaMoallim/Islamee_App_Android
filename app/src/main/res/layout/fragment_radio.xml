<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backGround"
        tools:context=".RadioFragment">

        <com.whygraphics.multilineradiogroup.MultiLineRadioGroup xmlns:multi_line_radio_group="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_activity_multi_line_radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            multi_line_radio_group:layout_constraintTop_toTopOf="parent"
            multi_line_radio_group:max_in_row="2"
            android:layout_marginTop="100dp"
            multi_line_radio_group:layout_constraintStart_toStartOf="parent"
            multi_line_radio_group:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            multi_line_radio_group:radio_buttons="@array/radio_buttons" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_radio_playOrStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_custom_style"
            android:paddingHorizontal="60dp"
            android:text="تشغيل"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_activity_multi_line_radio_group" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>